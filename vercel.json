{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "crons": [
    {
      "path": "/api/cron/generate-game",
      "schedule": "0 0 * * *"
    }
  ],
  "rewrites": [
    { "source": "/commercial", "destination": "/" },
    { "source": "/ww2", "destination": "/" },
    { "source": "/ww1", "destination": "/" },
    { "source": "/helicopters", "destination": "/" },
    { "source": "/drones", "destination": "/" }
  ]
}
